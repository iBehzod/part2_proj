Bootstrap: docker
From: ubuntu:20.04

%labels
    Author iBekhzod

%post
    # Install dependencies
    apt-get update && apt-get install -y g++ cmake

%files
    # Copy the entire project into the container
    . /part2_proj

%environment
    export PATH=/part2_proj:$PATH

%runscript
    # Navigate to the build directory
    cd /part2_proj
    # Build the project
    ./build.sh
    # Run the tests
    ./build/test/test_matrix_multiplication
