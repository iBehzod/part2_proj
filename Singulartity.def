Bootstrap: docker
From: ubuntu:20.04

%labels
    Author YourName

%post
    # Install dependencies
    apt-get update && apt-get install -y g++ cmake

%files
    # Copy the entire project into the container
    . /app

%environment
    export PATH=/app:$PATH

%runscript
    # Navigate to the build directory
    cd /app
    # Build the project
    ./build.sh
    # Run the tests
    ./build/test/test_matrix_multiplication